{
  "compilerOptions": {
    // Base Options recommended for all projects
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "Node16",
    "outDir": "dist",
    // Include the DOM types
    "lib": ["es2022", "dom", "dom.iterable"],
    // Tells typescript this is a monorepo
    "composite": true,
    // Tells TypeScript to emit .d.ts files
    "declaration": true,
    // Tells TypeScript to emit source maps and declaration maps
    "declarationMap": true,
    "sourceMap": true
  },
  // Include the necessary files for your project
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
